.body-title
  %h1
    Páginas
  %small Lista de páginas o sliders creados en el sistema
.body-toolbar
  Acciones:
  %a.btn.btn-primary{:href => new_admin_page_path} Nueva página
.body-content
  - if flash[:notice]
    .alert.alert-info.alert-dismissible.fade.show
      %button.close{data:{dismiss: 'alert'}}
        %span{aria: {hidden: 'true'}} &times;
      = flash[:notice]
  %table.table
    %thead
      %tr
        %th Nombre
        %th Tipo de tarjeta
        %th Peso
        %th Acción
    %tbody
      - if @pages.empty?
        %tr
          %td.text-center{colspan: 4}
            %small Sin contenido ingresado
      - @pages.each do |item|
        %tr
          %td #{item.name}
          %td #{item.page_type}
          %td #{item.weight}
          %td
            = link_to('Editar', edit_admin_page_path(item))
            = link_to('Eliminar', admin_page_path(item), method: :delete, data: {confirm: '¿Está seguro?'})


