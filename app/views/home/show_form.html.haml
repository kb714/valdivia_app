  %small VÃ¡lido hasta: #{@survey.expiration}
.card
  .text-center
    %img{src: @survey.banner.url, width: '100%'}
  .card-block
    %h3 #{@survey.name}
    %small #{@survey.description}
    %hr
    = form_tag store_home_form_path, method: :post, id: 'survey_form' do
      - @survey.questions.each do |q|
        %h5 #{q.name}
        %small #{q.description}
        %br
        - if q.question_type.to_i == 0
          - q.answers.each do |a|
            .form-group
              = content_tag(:label) do
                = radio_button_tag q.name, a.content
                = a.content
        - if q.question_type.to_i == 1
          .form-group
            = file_field_tag("survey[#{q.name}]", class: 'form-control')
        - if q.question_type.to_i == 2
          .form-group
            = text_field_tag("survey[#{q.name}]", if params[:survey] then params[:survey]["#{q.name}"] end, class: 'form-control')
      %br
      = submit_tag('Enviar formulario', class: 'btn btn-primary')